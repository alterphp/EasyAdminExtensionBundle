{% set _select2_create_locales = ['en', 'es'] %}
{% set _app_language = app.request.locale|split('-')|first|split('_')|first %}
{% set _select2_create_locale = app.request.locale in _select2_create_locales
    ? app.request.locale
    : _app_language in _select2_create_locales ? _app_language : 'en'
%}

{% extends '@BaseEasyAdmin/default/layout.html.twig' %}

{% block head_stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/easyadminextension/stylesheet/easyadmin-extension.css') }}">
{% endblock %}

{% block head_javascript %}
  {{ parent() }}
  <script src="{{ asset('bundles/easyadminextension/js/select2/i18n/' ~ _select2_create_locale ~ '.js') }}"></script>
  <script src="{{ asset('bundles/easyadminextension/js/easyadmin-extension.js') }}"></script>
{% endblock %}

{% block wrapper %}
  {{ parent() }}

  {% block confirm_modal %}
    {{ include('@EasyAdmin/includes/_confirm_modal.html.twig', {
      _translation_domain: _entity_config.translation_domain|default(easyadmin_config('translation_domain')),
      _trans_parameters: _trans_parameters|default([]),
    }, with_context = false) }}
  {% endblock confirm_modal %}

  {% block form_entity_modal %}
    {{ include('@EasyAdmin/includes/_form_entity_modal.html.twig', {
      _translation_domain: _entity_config.translation_domain|default(easyadmin_config('translation_domain')),
      _trans_parameters: _trans_parameters|default([]),
    }, with_context = false) }}
  {% endblock form_entity_modal %}
{% endblock %}
