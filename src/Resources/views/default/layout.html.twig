{% extends '@!EasyAdmin/default/layout.html.twig' %}

{% block head_stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/easyadminextension/stylesheet/easyadmin-extension.css') }}">
{% endblock %}

{% block head_javascript %}
  {{ parent() }}
  <script src="{{ asset('bundles/easyadminextension/js/easyadmin-extension.js') }}"></script>
{% endblock %}

{% block wrapper %}
  {{ parent() }}

  {% block create_entity_modal %}
    {{ include('@EasyAdmin/includes/_create_entity_modal.html.twig', {
      _translation_domain: _entity_config.translation_domain|default(easyadmin_config('translation_domain')),
      _trans_parameters: _trans_parameters|default([]),
    }, with_context = false) }}
  {% endblock create_entity_modal %}

  {% block custom_modals '' %}

  {% block confirm_modal %}
    {{ include('@EasyAdmin/includes/_confirm_modal.html.twig', {
      _translation_domain: _entity_config.translation_domain|default(easyadmin_config('translation_domain')),
      _trans_parameters: _trans_parameters|default([]),
    }, with_context = false) }}
  {% endblock confirm_modal %}
{% endblock %}
