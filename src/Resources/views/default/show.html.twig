{% extends easyadmin_object_base_twig_path(app.request, 'default/show.html.twig') %}

{% set _object_config = easyadmin_object(app.request) %}
{% set _object_type = easyadmin_object_type(app.request) %}
{% set _object = 'document' == _object_type ? document : entity %}
{% set _object_id = '' ~ attribute(_object, _object_config.primary_key_field_name) %}

{# Do not display list action items if not granted #}
{% block item_actions %}
  {% set _show_actions = easyadmin_get_actions_for_show_item(_object_config.name)|prune_item_actions(_object_config, [], _object) %}
  {% set _request_parameters = { (_object_type): _object_config.name, referer: app.request.query.get('referer') } %}

  {{ include(easyadmin_object_twig_path(app.request, 'default/includes/_actions.html.twig'), {
      actions: _show_actions,
      request_parameters: _request_parameters,
      translation_domain: _object_config.translation_domain,
      trans_parameters: _trans_parameters,
      item_id: _object_id
  }, with_context = false) }}
{% endblock %}
