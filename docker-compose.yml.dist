version: '3.2'

services:

    phpunit:
        build: docker/phpunit
        volumes:
            - ./:/app
        entrypoint:
          - php
          - /app/vendor/bin/simple-phpunit

    php-cs-fixer:
        image: ekreative/php-cs-fixer
        volumes:
            - ./:/app
        entrypoint:
          - /usr/local/bin/php-cs-fixer
          - fix
          - /app
